{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "binaryDir": "${sourceDir}/build/dev",
      "inherits": "dev-linux"
    },
    {
      "name": "dev",
      "binaryDir": "${sourceDir}/build/dev",
      "inherits": "dev-linux"
    },
    {
      "name": "dev-coverage",
      "binaryDir": "${sourceDir}/build/coverage",
      "inherits": ["coverage-linux"]
    },
    {
      "name": "dev-sanitize",
      "binaryDir": "${sourceDir}/build/sanitize",
      "inherits": ["dev-mode", "sanitize-linux"]
    },
    {
      "name": "release",
      "binaryDir": "${sourceDir}/build/release",
      "inherits": "ci-ubuntu"
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "configuration": "Debug",
      "jobs": 16
    }
  ],
  "testPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "jobs": 16,
        "noTestsAction": "error"
      }
    }
  ]
}
